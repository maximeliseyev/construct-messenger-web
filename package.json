{
  "name": "construct-messenger",
  "version": "0.1.0",
  "private": true,
  "description": "Secure E2EE messenger with Rust core and TypeScript UI",
  "author": "Construct Team",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:wasm": "cd packages/core && wasm-pack build --target web --release --out-dir ../../dist-wasm",
    "build:wasm:dev": "cd packages/core && wasm-pack build --target web --dev --out-dir ../../dist-wasm",
    "test": "turbo run test",
    "test:wasm": "cargo test --workspace",
    "test:integration": "cargo test --workspace --test '*'",
    "lint": "turbo run lint",
    "lint:rust": "cargo clippy --workspace --all-targets -- -D warnings",
    "typecheck": "turbo run typecheck",
    "format": "turbo run format && cargo fmt --all",
    "format:check": "cargo fmt --all -- --check",
    "audit": "cargo audit && pnpm audit",
    "clean": "turbo run clean && cargo clean && rm -rf dist-wasm node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "husky": "^8.0.0",
    "turbo": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
